void loop()
{
  if (echo <= 700 && chargeTimer < 7500) {phase = 2}; //test to find perfect distance from wall
  if (millis() - chargeTimer >= 7500) {phase = 3}; //test to find how long it takes to reach the charging station
  
  switch (phase)
  {
    case 1: 
      ping();
      driveStraight();
      timer = millis(); //use if we are basing the turns on time
    case 2:      
      uTurn(turnFlag);
      if (millis - timer >= 1900) {phase = 1}; //set phase back to 1 after turning
    case 3:
      findBeacon;
  }
  
}


